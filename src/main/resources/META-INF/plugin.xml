<idea-plugin>
    <id>com.github.henne90gen.neonintellijplugin</id>
    <name>Neon-IntelliJ-Plugin</name>
    <vendor>henne90gen</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.henne90gen.neonintellijplugin.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.henne90gen.neonintellijplugin.services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.henne90gen.neonintellijplugin.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
